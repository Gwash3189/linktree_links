{
  "name": "linktree_assessment",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "jest test",
    "test:watch": "jest test --watch",
    "test:coverage": "jest test --coverage",
    "clean": "rm -rf dist/*",
    "build": "npm run clean && webpack",
    "start": "npm run clean && cp static/index.html dist/ && webpack-dev-server --open",
    "lint": "eslint --ext .ts,.tsx src --color",
    "lint:fix": "npm run lint -- --fix"
  },
  "author": "Adam Beck",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chai-enzyme": "^1.0.0-beta.1",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "style-loader": "^1.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "@babel/preset-typescript": "^7.7.4",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-import-resolver-typescript": "^2.0.0"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/test/support/style-setup.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/support/enzyme-setup.js"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "clearMocks": true,
    "testMatch": [
      "<rootDir>/test/**/*-test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "lines": 94,
        "branches": 93
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "reporters": [
      "default"
    ]
  }
}
